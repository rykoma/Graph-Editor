<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Graph_Editor.Pages.AccessTokenWizard.AccessTokenWizardContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Graph_Editor.Pages.AccessTokenWizard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Frame x:Name="contentFrame" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Frame>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,16,0,16">
            <Button x:Name="Button_Previous" x:Uid="/Pages.AccessTokenWizard.AccessTokenWizardContainer/Button_Previous" Margin="8,0" Click="Button_Previous_Click" />
            <Button x:Name="Button_Next" x:Uid="/Pages.AccessTokenWizard.AccessTokenWizardContainer/Button_Next" Margin="8,0" Click="Button_Next_Click" />
            <Button x:Name="Button_Cancel" x:Uid="/Pages.AccessTokenWizard.AccessTokenWizardContainer/Button_Cancel" Margin="8,0" Click="Button_Cancel_Click" />
        </StackPanel>

        <ProgressRing x:Name="ProgressRing_AuthRing" IsActive="False" Visibility="Collapsed" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
